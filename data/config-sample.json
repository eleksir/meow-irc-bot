	"db": {
		"todo": "db/todo"
	},

	# Настройки логов
	"log" : "meow.log",
	"loglevel" : "info",

	# pid-файл
	#"pid" : "meow.pid",

	# Превращаемся ли в демона, как обычный unix-style сервис или висим на переднем плане, как systemd-сервис
	"daemonize": 0
}

